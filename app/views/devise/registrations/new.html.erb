<div class="container" style="margin-top: 20px">
  <div class="col-md-4 col-md-offset-4">
    <h2 align="center">Registrar</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form form-control" %>
      </div>
      <br>

      <div class="field">
        <%= f.label :Contraseña %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form form-control" %>
      </div>
      <br>

      <div class="field">
        <%= f.label :Confirmar_Contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form form-control" %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit "Sign up", class: "btnad" %>
      </div>
      <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style type="text/css">
  .btnad{
    background-color: #FFAA00FF;
    width: 100%;
    height: 30px;
    border: 0px;
    border-radius: 2px;
    color: #FFFFFFFF;
  }

  a:hover{
    text-decoration: none;
  }
</style>