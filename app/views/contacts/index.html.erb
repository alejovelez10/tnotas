
<div class="container">
  <h1 align="center">Preguntas Enviadas</h1>
 <br>
 <br>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Descripcion</th>
        <th>Asunto</th>
        <th colspan="3" style="text-align: center;">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.description %></td>
          <td><%= contact.affair %></td>
          <td><%= link_to 'Mostrar', contact %></td>
          <td><%= link_to 'Editar', edit_contact_path(contact) %></td>
          <td><%= link_to 'Eliminar', contact, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<style type="text/css">
  a:hover{
    text-decoration: none;
  }
</style>
