<div class="container">
  <h1 align="center">Proveedores</h1>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>State</th>
        <th colspan="3" style="text-align: center;">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.description %></td>
           <td><%= image_tag supplier.image_url, style: "width:100px;" %></td>
          <td><%= supplier.state %></td>
          <td><%= link_to 'Show', supplier %></td>
          <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
          <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>  

  <%= link_to 'Nuevo Proveedor', new_supplier_path, class: "btn btn-primary" %>
</div>

