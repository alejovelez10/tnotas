<div class="container">
  <h1 align="center">Productos</h1>
  <br>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th>State</th>
      <th>Price</th>
      <th>Show index</th>
      <th>User</th>
      <th>Supplier</th>
      <th colspan="3" style="text-align: center;">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
           <td><%= image_tag product.image_url, style: "width:100px;" %></td>
        <td><%= product.state %></td>
        <td><%= product.price %></td>
        <td><%= product.show_index %></td>
        <td><%= product.user_id %></td>
        <td><%= product.supplier_id %></td>
        <td><%= link_to 'Mostrar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <br>
  <%= link_to 'Nuevo Producto', new_product_path, class: "btn btn-primary" %>

</div>

