<div class="row sign_form" style="    background-color: ;">

<div class="col-lg-6 col-lg-offset-3 login1">
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name , class: "form form-control"%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description , class: "form form-control"%>
  </div>
  <br>
  <div class="field">
    <%= form.label :imagen %>
    <%= form.file_field :image, id: :product_image, class: "form form-control" %>
  </div>
  <br>
  <div class="row">
  <div class="col-md-2">
      <div class="field">
    <%= form.label :Estado %><br>
    <%= form.check_box :state, id: :product_state, class: "checkboxThree" %>
  </div>
  </div>
   <div class="col-md-3">
     <div class="field">
    <%= form.label :Show_index %><br>
    <%= form.check_box :show_index, id: :product_show_index, class: "checkboxThree" %>
  </div>
  </div>
  <div class="col-md-2">
     <div class="field">
    <%= form.label "Nuevo" %><br>
    <%= form.check_box :nuevo,id: "slideThree",  class: "checkboxThree" %>
  </div>
  </div>
  <div class="col-md-2">
     <div class="field">
    <%= form.label "Destacado" %>
    <%= form.check_box :outstanding, id: :product_outstanding, class: "checkboxThree" %>
  </div>
  </div>
  <br>

  </div>
  <br>
    <div class="row">
  <div class="col-lg-6">
      <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :product_price, class: "form form-control" %>
  </div>
  </div>
   <div class="col-lg-6">
      <div class="field">
        <%= form.label "Proveedor" %><br>
        <%= form.select :supplier_id,Supplier.all.map { |u| [u.name, u.id] },{ include_blank: false },{ class: 'form form-control'  }%>
  </div>
  </div>
  
  </div>
  <br>

    <div class="form-group">
               <%= form.label "Categoria" %><br>
               <%= form.select :sub_category_ids, SubCategory.all.collect {|c| ["#{c.name} - #{c.category.name}", c.id]}, {prompt: false}, {:multiple => true,class: 'form form-control'} %>
            </div>

      <div class="actions">
        <%= form.submit  "Guardar", class: "btn btn-primary" %>
        <%= link_to "Volver", products_path, class: "volver"%>
      </div>
    <% end %>
  </div>
</div>
<br>

<style type="text/css">

  .login1{
    border-right: 8px solid #FEAD00;
    border-left: 8px solid #FEAD00;
  }

  .btn{
  background-color: #FEAD00;
  border-color: #FEAD00;

  }

  .btn:hover{
    background-color: #FEAD00;
    border-color: #FEAD00;

  }

  .volver{
    padding: 11px 10px;
    background-color: #FEAD00;
    border-radius: 6px;
    text-decoration: none;
    color: #f1f1f1;

  }

  .volver:hover{
    color: black;
    text-decoration: none;
    color: #f1f1f1;
  }
  

</style>