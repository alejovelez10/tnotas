<div class="container">
  <h1 align="center">SubCategorias</h1>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Imagen</th>
        <th>State</th>
        <th>Icon</th>
        <th>User</th>
        <th>Category</th>
        <th colspan="3" style="text-align: center;">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @sub_categories.each do |sub_category| %>
        <tr>
          <td><%= sub_category.name %></td>
          <td><%= sub_category.description %></td>
          <td><%= sub_category.image %></td>
          <td><%= sub_category.state %></td>
          <td><%= sub_category.icon %></td>
          <td><%= sub_category.user_id %></td>
          <td><%= sub_category.category_id %></td>
          <td><%= link_to 'Mostrar', sub_category %></td>
          <td><%= link_to 'Editar', edit_sub_category_path(sub_category) %></td>
          <td><%= link_to 'Eliminar', sub_category, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Sub Categoria', new_sub_category_path, class: "btn btn-primary" %>

</div>
<br>

<style type="text/css">

  .btn{
  background-color: #FEAD00;
  border-color: #FEAD00;

  }

  .btn:hover{
    background-color: #FEAD00;
    border-color: #FEAD00;

  }

</style>
