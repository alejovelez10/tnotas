<div class="row primeros-productos" style="margin-top:0px;">
   <div class="col-md-12 ban">
      <h2><%=@categoria.name.upcase%></h2>
      <%=link_to "Volver", root_path , style:"font-size:16px;color:orange;"%>
      <br>
   </div>
   <div class="row">
      <div class="col-md-12">
         <% @categoria.sub_categories.each do |sub_cat| %>
         <%=link_to "#{sub_cat.name}", show_subCategoria_path(sub_cat.id), class: "btn btn-primary", style: "    background: orange;border: 1px;margin-top:15px;"%>
         <%end%>
      </div>
   </div>
   <br><br>
   <% @categoria.sub_categories.each do |sub_cat| %>
   <% sub_cat.products.where(state: true).each do |product| %>
   <div class="col-md-3">
      <%=image_tag product.image_url, style: "width:200px;"%>
      <h3><%=product.name%></h3>
   </div>
   <%end%>
   <%end%>
</div>
