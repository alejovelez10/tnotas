
<div class="container">
  <h1 align="center">Catalogos</h1>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>State</th>
        <th colspan="3" style="text-align: center;">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @catalogs.each do |catalog| %>
        <tr>
          <td><%= catalog.name %></td>
          <td><%= catalog.description %></td>
          <td><%= image_tag catalog.image_url, style: "width:100px;" %></td>
          <td><%= catalog.state %></td>
          <td><%= link_to 'Show', catalog %></td>
          <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
          <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Catalogo', new_catalog_path, class: "btn btn-primary" %>
</div>
<br>

<style type="text/css">

  .btn{
  background-color: #FEAD00;
  border-color: #FEAD00;

  }

  .btn:hover{
    background-color: #FEAD00;
    border-color: #FEAD00;

  }

</style>